<% if !params[:s].blank? %>
  <div class="container">
    <h1>正在搜尋: <%= params[:s] %></h1>
  </div>
<% end %>
<div class="container">
    <% @datasets.each do |dataset| %>
      <div class="dataset" data-id="<%= dataset.id %>">
        <div class="row">
            <div class="col-md-8">
              <h2><%= highlight dataset.name, params[:s] %> <small><%= dataset.created_at %></small></h2>
                <div class="desc"><%= highlight dataset.description, params[:s] %></div>
            </div>
            <div class="col-md-4">
                <div class="owner"><%= image_tag dataset.owner.avatar %> <%= dataset.owner.name %></div>
            </div>
        </div>
        <div class="more" style="display:none"></div>
      </div>
    <% end %>
</div>
<script id="t-datasets-more" type="x-handlebars-template">
    <hr>
    <p>數量: {{ row_count }} 筆</p>
    <table class="table">
        <tr>{{#each first_row}}<th>{{@key}}</th>{{/each}}</tr>
        <tr>{{#each first_row}}<td>{{this}}</td>{{/each}}</tr>
    </table>
    <div class="row" style="margin: 0;">
        <a class="pull-right btn btn-danger" href="/datasets/{{ id }}">More</a>
    <div>
</script>
